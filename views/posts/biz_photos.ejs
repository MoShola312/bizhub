<% layout('layouts/boilerplate') -%>
<div class="container"> 
    <h1 class="text-center">Photos for <%=post.title %></h1>
    <hr>
    <p class="text-center"><a href="/posts/<%= post.id %>"><%= post.title %></a></p>
    <!-- <p id="starRating" class="text-center"><a href="/posts/<%= post.id %>"></a></p> -->
    
        <div class="row text-center" style="display:flex;">
                    <% post.images.forEach(function(image){ %>

                        <div class="col-lg-3 col-md-6 col-sm-12 mb-2">
                            
                            <a href="#a<%=image._id%>"  role="button" data-toggle="modal">
                            <img class="thumbnail-gallery" src="<%= image.path %>" alt=" "> 
                            </a>	
                        </div>
                
                        <!-- Modal -->
                        <div class="modal fade" id="a<%= image._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title"><%=post.title %></h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body mx-auto">
                                        <img  class="modal-image" src="<%= image.path %>" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>	
                    <% }) %>
        </div>
      
	    
            
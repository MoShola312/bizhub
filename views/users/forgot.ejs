<% layout('layouts/boilerplate') -%>
<div class="container-fluid">
	<div class="row">
	    <div class="col-3"></div>
		<div class="col-sm-3 form-group">
            <h1>Forgot Password</h1>

            <form action="/forgot-password?_method=PUT" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" name="email" autofocus>
            </div>
            <div class="form-group">
                <input class="btn btn-primary mb-2" type="submit" class="form-control" value="Reset Password">
            </div>
            </form>
        </div>
        <div class="col-3"></div>
        <div class="col-3"></div>
    </div>
</div>